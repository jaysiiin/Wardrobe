@model IEnumerable<Wardrobe1.Models.ClothingMain>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopStuff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomStuff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeStuff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoriesStuff)
        </th>
        <th></th>
    </tr>
</table>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4" id="reviewIndex">
                <div class="caption">
                    @Html.DisplayFor(modelItem => item.TopStuff.Name)
                    @if (item.TopStuff.Name == "Kitty T-shirt")
                    {
                        <p id="kitty"><img src="~/Pictures/Tops/RipNDip-Lord-Nermal-Pocket-T-Shirt-_261664-front.jpg" /></p>
                    }

                    @Html.DisplayFor(modelItem => item.BottomStuff.Name)

                    @Html.DisplayFor(modelItem => item.ShoeStuff.Name)

                    @Html.DisplayFor(modelItem => item.AccessoriesStuff.Name)

                    @Html.ActionLink("Edit", "Edit", new { id = item.ClothingID })
                    @Html.ActionLink("Details", "Details", new { id = item.ClothingID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ClothingID })
               </div>     
           </div>
                    }
     </div>
